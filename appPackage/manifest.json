{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.2.4",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Cerebrum Tech",
        "websiteUrl": "https://cerebrumtechnologies.com",
        "privacyUrl": "https://cerebrumtechnologies.com/termofuse",
        "termsOfUseUrl": "https://cerebrumtechnologies.com/privacy"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Cere Bot",
        "full": "Cere Insight Teams Bot"
    },
    "description": {
        "short": "This bot is a Cere Insight Teams Bot",
        "full": "This bot dirrectly connectet to an Cere Insight Bot Instance"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal",
                "team",
                "groupchat"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
            ]
        }
    ],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}